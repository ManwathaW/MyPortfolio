<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Manwatha Wanga Comfort | Portfolio</title>
    <meta name="description" content="Full Stack Developer specializing in .NET, PHP, and Mobile Development. Explore my projects and expertise.">
    <meta name="keywords" content="developer, .NET, C#, PHP, ASP.NET Core, Full Stack">
    <meta property="og:title" content="Manwatha Wanga | Full Stack Developer">
    <meta property="og:image" content="/Images/profile.webp">
    <meta property="og:description" content="Full Stack Developer specializing in .NET and PHP technologies">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/animations.css" />
    <link rel="stylesheet" href="~/css/tier3-tier4-enhancements.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-md navbar-toggleable-md navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid px-3">
                <a class="navbar-brand fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-code-slash"></i> MWC Portfolio
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto flex-grow-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Projects" asp-action="Index">Projects</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Skills" asp-action="Index">Skills</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                        </li>
                    </ul>
                    <div class="d-flex gap-2 mt-3 mt-md-0 ms-md-3">
                        <a href="https://github.com/ManwathaW" target="_blank" class="btn btn-outline-light btn-sm" title="GitHub">
                            <i class="bi bi-github"></i>
                        </a>
                        <a href="https://linkedin.com/in/wanga-manwatha-112wc" target="_blank" class="btn btn-outline-light btn-sm" title="LinkedIn">
                            <i class="bi bi-linkedin"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main role="main" class="flex-grow-1">
        <div class="container-fluid px-3 px-md-4 py-3">
            @RenderBody()
        </div>
    </main>

    <footer class="border-top footer text-muted mt-5">
        <div class="container-fluid px-3 px-md-4">
            <div class="row py-3 gy-2">
                <div class="col-12 col-md-6 text-center text-md-start">
                    &copy; @DateTime.Now.Year - MANWATHA WANGA COMFORT | Portfolio
                </div>
                <div class="col-12 col-md-6 text-center text-md-end">
                    <a href="mailto:manwathawanga312@gmail.com">
                        <i class="bi bi-envelope-fill"></i> manwathawanga312@gmail.com
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/animations.js" asp-append-version="true"></script>
    <script src="~/js/tier3-tier4-enhancements.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>