@model Project
@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>@Model.Title</h1>
            <p class="lead">@Model.Description</p>
            
            <div class="mb-4">
                <h4>Technologies Used</h4>
                <div>
                    @foreach (var tech in Model.Technologies)
                    {
                        <span class="badge bg-secondary me-1">@tech</span>
                    }
                </div>
            </div>
            
            <div class="mb-4">
                <h4>Links</h4>
                @if (!string.IsNullOrEmpty(Model.ProjectUrl))
                {
                    <a href="@Model.ProjectUrl" target="_blank" class="btn btn-primary me-2">
                        <i class="bi bi-globe"></i> Live Demo
                    </a>
                }
                @if (!string.IsNullOrEmpty(Model.GitHubUrl))
                {
                    <a href="@Model.GitHubUrl" target="_blank" class="btn btn-outline-dark">
                        <i class="bi bi-github"></i> Source Code
                    </a>
                }
            </div>
            
            <a asp-action="Index" class="btn btn-secondary">Back to Projects</a>
        </div>
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded" alt="@Model.Title">
        </div>
    </div>
</div>v