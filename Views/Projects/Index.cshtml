@model ProjectsViewModel
@{
    ViewData["Title"] = "My Projects";
}

<div class="mb-4">
    <h1 class="mb-3">@ViewData["Title"]</h1>
    <p class="lead text-muted">Browse through my development projects and applications.</p>
</div>

<!-- Filters and Controls -->
<div class="row mb-4 g-2">
    <div class="col-12 col-lg-8">
        <form asp-action="Index" method="get" class="d-flex flex-column flex-sm-row gap-2">
            <select name="technology" class="form-select" onchange="this.form.submit()" style="flex: 1;">
                <option value="">All Technologies</option>
                @foreach (var tech in Model.Technologies)
                {
                    <option value="@tech" selected="@(tech == Model.SelectedTechnology)">@tech</option>
                }
            </select>
            <input type="hidden" name="viewMode" value="@Model.ViewMode" />
            <input type="hidden" name="page" value="1" />
            <span class="text-muted align-self-center">@Model.TotalItems</span>
            @if (!string.IsNullOrEmpty(Model.SelectedTechnology))
            {
                <a asp-action="Index" asp-route-viewMode="@Model.ViewMode" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear
                </a>
            }
        </form>
    </div>
    <div class="col-12 col-lg-4">
        <div class="d-flex justify-content-lg-end">
            <div class="btn-group w-100 w-lg-auto" role="group">
                <a asp-action="Index" asp-route-technology="@Model.SelectedTechnology" asp-route-viewMode="grid" asp-route-page="@Model.CurrentPage"
                   class="btn btn-sm btn-outline-primary @(Model.ViewMode == "grid" ? "active" : "")">
                    <i class="bi bi-grid-3x3-gap"></i> Grid
                </a>
                <a asp-action="Index" asp-route-technology="@Model.SelectedTechnology" asp-route-viewMode="list" asp-route-page="@Model.CurrentPage"
                   class="btn btn-sm btn-outline-primary @(Model.ViewMode == "list" ? "active" : "")">
                    <i class="bi bi-list-ul"></i> List
                </a>
            </div>
        </div>
    </div>
</div>

    <!-- No Projects Found Message -->
    @if (!Model.Projects.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> No projects found matching your filter criteria.
        </div>
    }

    <!-- Projects Grid View -->
    @if (Model.ViewMode == "grid")
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-3 g-md-4">
            @foreach (var project in Model.Projects)
            {
                <div class="col">
                    <div class="card h-100 project-card">
                        <div class="position-relative overflow-hidden" style="height: 200px;">
                            <img src="@project.ImageUrl" class="card-img-top w-100 h-100 object-fit-cover" alt="@project.Title">
                            <div class="project-overlay d-none">
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-primary btn-sm">View Details</a>
                            </div>
                            @if (project.IsFeatured)
                            {
                                <div class="position-absolute top-0 start-0 m-2">
                                    <span class="badge bg-success">Featured</span>
                                </div>
                            }
                        </div>
                        <div class="card-body pb-2">
                            <h5 class="card-title fs-6">@project.Title</h5>
                            <p class="card-text small text-muted">@project.Description</p>
                            <div class="mb-2">
                                @foreach (var tech in project.Technologies.Take(3))
                                {
                                    <span class="badge bg-secondary me-1 mb-1">@tech</span>
                                }
                                @if (project.Technologies.Count > 3)
                                {
                                    <span class="badge bg-light text-dark">+@(project.Technologies.Count - 3)</span>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent d-flex justify-content-between align-items-center flex-wrap gap-2">
                            <small class="text-muted">@project.CompletionDate.ToString("MMM yyyy")</small>
                            <div class="d-flex gap-2">
                                <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-primary">Details</a>
                                @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                {
                                    <a href="@project.GitHubUrl" target="_blank" class="btn btn-sm btn-outline-dark" title="GitHub">
                                        <i class="bi bi-github"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Projects List View -->
    @if (Model.ViewMode == "list")
    {
        <div class="row">
            @foreach (var project in Model.Projects)
            {
                <div class="col-12 mb-3">
                    <div class="list-group-item list-group-item-action p-3 rounded">
                        <div class="row g-3">
                            <div class="col-12 col-sm-3">
                                <img src="@project.ImageUrl" alt="@project.Title" class="img-fluid rounded" style="max-height: 150px;">
                            </div>
                            <div class="col-12 col-sm-9">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h6 class="mb-1">@project.Title</h6>
                                        <p class="mb-2 text-muted small">@project.Description</p>
                                    </div>
                                    @if (project.IsFeatured)
                                    {
                                        <span class="badge bg-success">Featured</span>
                                    }
                                </div>
                                <div class="mb-2">
                                    @foreach (var tech in project.Technologies.Take(5))
                                    {
                                        <span class="badge bg-secondary me-1 mb-1">@tech</span>
                                    }
                                    @if (project.Technologies.Count > 5)
                                    {
                                        <span class="badge bg-light text-dark">+@(project.Technologies.Count - 5)</span>
                                    }
                                </div>
                                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                                    <small class="text-muted">@project.CompletionDate.ToString("MMM yyyy")</small>
                                    <div class="d-flex gap-2">
                                        <a asp-action="Details" asp-route-id="@project.Id" class="btn btn-sm btn-primary">Details</a>
                                        @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                        {
                                            <a href="@project.GitHubUrl" target="_blank" class="btn btn-sm btn-outline-dark">
                                                <i class="bi bi-github"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <!-- Pagination -->
    @if (Model.TotalPages > 1)
    {
        <nav aria-label="Project pagination" class="mt-4">
            <ul class="pagination justify-content-center flex-wrap">
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-technology="@Model.SelectedTechnology"
                       asp-route-viewMode="@Model.ViewMode" asp-route-page="1">
                        <i class="bi bi-chevron-double-left"></i>
                    </a>
                </li>
                <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-technology="@Model.SelectedTechnology"
                       asp-route-viewMode="@Model.ViewMode" asp-route-page="@(Model.CurrentPage - 1)">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>

                @{
                    int startPage = Math.Max(1, Model.CurrentPage - 2);
                    int endPage = Math.Min(Model.TotalPages, startPage + 4);
                    startPage = Math.Max(1, endPage - 4);

                    for (int i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" asp-action="Index" asp-route-technology="@Model.SelectedTechnology"
                               asp-route-viewMode="@Model.ViewMode" asp-route-page="@i">@i</a>
                        </li>
                    }
                }

                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-technology="@Model.SelectedTechnology"
                       asp-route-viewMode="@Model.ViewMode" asp-route-page="@(Model.CurrentPage + 1)">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
                <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                    <a class="page-link" asp-action="Index" asp-route-technology="@Model.SelectedTechnology"
                       asp-route-viewMode="@Model.ViewMode" asp-route-page="@Model.TotalPages">
                        <i class="bi bi-chevron-double-right"></i>
                    </a>
                </li>
            </ul>
        </nav>
    }