<!-- Featured Projects -->
<section class="featured-projects py-5">
    <div class="container">
        <div class="d-flex flex-column flex-md-row justify-content-between align-items-center mb-5">
            <div class="text-center text-md-start mb-3 mb-md-0">
                <h2 class="section-title mb-0">Featured Projects</h2>
                <p class="text-muted">Innovative solutions built with modern technologies</p>
            </div>
            <a asp-controller="Projects" asp-action="Index" class="btn btn-outline-primary">
                View All Projects <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>

        <div class="row g-4">
            @if (ViewBag.FeaturedProjects != null && ViewBag.FeaturedProjects.Count > 0)
            {
                @foreach (var project in ViewBag.FeaturedProjects)
                {
                    <div class="col-lg-6">
                        <div class="card project-card h-100 border-0 shadow-sm">
                            <div class="position-relative">
                                <img src="@project.ImageUrl" class="card-img-top" alt="@project.Title" onerror="this.src='/images/projects/default-project.jpg'">
                                <div class="project-overlay">
                                    <a asp-controller="Projects" asp-action="Details" asp-route-id="@project.Id" class="btn btn-primary">
                                        <i class="bi bi-eye me-2"></i>View Details
                                    </a>
                                    @if (!string.IsNullOrEmpty(project.GitHubUrl))
                                    {
                                        <a href="@project.GitHubUrl" target="_blank" rel="noopener noreferrer" class="btn btn-outline-light ms-2">
                                            <i class="bi bi-github me-2"></i>GitHub
                                        </a>
                                    }
                                </div>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h3 class="card-title h5 mb-0">@project.Title</h3>
                                    @if (project.IsFeatured)
                                    {
                                        <span class="badge bg-warning text-dark">
                                            <i class="bi bi-star-fill"></i> Featured
                                        </span>
                                    }
                                </div>
                                <p class="card-text text-muted small">
                                    @if (project.Description.Length > 150)
                                    {
                                        @project.Description.Substring(0, 150)
                                        <text>...</text>
                                    }
                                    else
                                    {
                                        @project.Description
                                    }
                                </p>
                                <div class="tech-stack mt-3">
                                    <h6 class="small text-muted mb-2">Technologies:</h6>
                                    @{
                                        int techCount = 0;
                                    }
                                    @foreach (var tech in project.Technologies)
                                    {
                                        if (techCount < 4)
                                        {
                                            <span class="badge bg-secondary me-1 mb-1">@tech</span>
                                        }
                                        techCount++;
                                    }
                                    @if (project.Technologies.Count > 4)
                                    {
                                        <span class="badge bg-light text-dark mb-1">+@(project.Technologies.Count - 4) more</span>
                                    }
                                </div>
                                @if (project.CompletionDate != DateTime.MinValue)
                                {
                                    <div class="mt-3 small text-muted">
                                        <i class="bi bi-calendar-check me-1"></i>
                                        Completed: @project.CompletionDate.ToString("MMMM yyyy")
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="col-12 text-center py-5">
                    <i class="bi bi-folder2-open display-1 text-muted mb-3"></i>
                    <p class="text-muted">No featured projects to display yet.</p>
                    <p class="text-muted small">Projects will appear here once added!</p>
                </div>
            }
        </div>
    </div>
</section>

