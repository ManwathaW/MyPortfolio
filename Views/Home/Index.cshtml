﻿@{
ViewData["Title"] = "Full Stack Developer";
}

<!-- Hero Section -->
<section class="hero-section text-center py-4 py-md-5 bg-light">
    <div class="container">
        <div class="row align-items-center g-4">
            <!-- Text Content -->
            <div class="col-12 col-lg-6 text-lg-start">
                <h1 class="display-5 display-md-4 fw-bold text-gradient mb-3">@ViewData["Name"]</h1>
                <h2 class="h4 h3-md mb-4 text-muted">@ViewData["Title"]</h2>
                <p class="lead fs-6 fs-md-base mb-4">@ViewData["Summary"]</p>
            </div>

            <!-- Profile Image with Tech Icons -->
            <div class="col-12 col-lg-6 mt-4 mt-lg-0">
                <div class="profile-wrapper mx-auto" style="width: 280px; height: 280px;">
                    <img src="/Images/profile.webp" alt="@ViewData["Name"] - Profile Photo"
                         class="img-fluid rounded-circle profile-main">

                    <!-- Floating Tech Icons -->
                    <div class="tech-icon tech-icon-1" title="C#"><i class="bi bi-filetype-cs"></i></div>
                    <div class="tech-icon tech-icon-2" title="PHP"><i class="bi bi-filetype-php"></i></div>
                    <div class="tech-icon tech-icon-3" title="HTML5"><i class="bi bi-filetype-html"></i></div>
                    <div class="tech-icon tech-icon-4" title="CSS3"><i class="bi bi-filetype-css"></i></div>
                    <div class="tech-icon tech-icon-5" title="JavaScript"><i class="bi bi-filetype-js"></i></div>
                    <div class="tech-icon tech-icon-6" title="Database"><i class="bi bi-server"></i></div>
                    <div class="tech-icon tech-icon-7" title="Cloud"><i class="bi bi-cloud"></i></div>
                    <div class="tech-icon tech-icon-8" title="Bootstrap"><i class="bi bi-bootstrap"></i></div>
                    <div class="tech-icon tech-icon-9" title="Git"><i class="bi bi-git"></i></div>
                    <div class="tech-icon tech-icon-10" title="WordPress"><i class="bi bi-wordpress"></i></div>
                    <div class="tech-icon tech-icon-11" title="API"><i class="bi bi-diagram-3"></i></div>
                    <div class="tech-icon tech-icon-12" title="Mobile"><i class="bi bi-phone"></i></div>
                    <div class="tech-icon tech-icon-13" title="Azure"><i class="bi bi-cloud-fill text-primary"></i></div>
                    <div class="tech-icon tech-icon-14" title="Docker"><i class="bi bi-box-seam"></i></div>
                    <div class="tech-icon tech-icon-15" title="React"><i class="bi bi-lightning-charge"></i></div>
                    <div class="tech-icon tech-icon-16" title="AI"><i class="bi bi-cpu"></i></div>
                </div>

                <!-- Achievements -->
                <div class="achievements mt-4">
                    <div class="achievement-badge">
                        <i class="bi bi-trophy-fill text-warning me-2"></i>
                        <span class="fw-semibold">@ViewData["Achievement1"]</span>
                    </div>
                    <div class="achievement-badge">
                        <i class="bi bi-trophy-fill text-warning me-2"></i>
                        <span class="fw-semibold">@ViewData["Achievement2"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

