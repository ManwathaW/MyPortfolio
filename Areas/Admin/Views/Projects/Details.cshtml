@model Project
@{
    ViewData["Title"] = "Project Details";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Project Details</h1>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
            <i class="bi bi-pencil me-2"></i>Edit
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2">
            <i class="bi bi-arrow-left me-2"></i>Back to List
        </a>
    </div>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="@Model.ImageUrl" alt="@Model.Title" class="img-fluid rounded mb-3">

                <div class="mb-3">
                    <h5>Technologies</h5>
                    <div>
                        @if (Model.Technologies != null && Model.Technologies.Any())
                        {
                            @foreach (var tech in Model.Technologies)
                            {
                                <span class="badge bg-secondary me-1 mb-1">@tech</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted">No technologies specified</span>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <h5>Status</h5>
                    <p>
                        @if (Model.IsFeatured)
                        {
                            <span class="badge bg-success">Featured Project</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Regular Project</span>
                        }
                    </p>
                </div>

                <div class="mb-3">
                    <h5>Completion Date</h5>
                    <p>@Model.CompletionDate.ToString("MMMM dd, yyyy")</p>
                </div>

                <div class="mb-3">
                    <h5>Links</h5>
                    <div class="d-flex flex-column">
                        @if (!string.IsNullOrEmpty(Model.ProjectUrl))
                        {
                            <a href="@Model.ProjectUrl" target="_blank" class="mb-2">
                                <i class="bi bi-globe me-2"></i>View Project
                            </a>
                        }

                        @if (!string.IsNullOrEmpty(Model.GitHubUrl))
                        {
                            <a href="@Model.GitHubUrl" target="_blank">
                                <i class="bi bi-github me-2"></i>GitHub Repository
                            </a>
                        }
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <h2>@Model.Title</h2>
                <div class="mt-4">
                    <h5>Description</h5>
                    <p class="text-muted">@Model.Description</p>
                </div>
            </div>
        </div>
    </div>
</div>